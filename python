### Python
# Simple Calculator in Python

def calculate(num1, num2, operator):
    if operator == '+':
        return num1 + num2
    elif operator == '-':
        return num1 - num2
    elif operator == '*':
        return num1 * num2
    elif operator == '/':
        if num2 == 0:
            return "Error: Division by zero"
        return num1 / num2
    else:
        return "Invalid operator"

# Test Cases:
print(calculate(10, 5, '+'))  # Output: 15
print(calculate(10, 0, '/'))  # Output: Error: Division by zero
